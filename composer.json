{
    "name": "jfcherng/wiki-cgroup-crawler",
    "description": "此腳本用於抓取維基百科的公共轉換組詞庫，並將結果儲存為 PHP 程式碼。",
    "type": "library",
    "authors": [
        {
            "name": "Jack Cherng",
            "email": "jfcherng@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Jfcherng\\WikiCGroupCrawler\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.1.3",
        "illuminate/support": "^5.6",
        "jaeger/querylist": "^4.0",
        "jakewhiteley/php-sets": "^1.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.11.1",
        "phpunit/phpunit": "^7.0"
    },
    "scripts": {
        "fix": [
            "php-cs-fixer fix --verbose"
        ],
        "test": [
            "phpunit --verbose"
        ]
    }
}
